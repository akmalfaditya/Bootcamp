@model Implemented_MVC.DTOs.UserDto
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>User Profile
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">First Name</label>
                            <p class="form-control-static">@Model?.FirstName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Last Name</label>
                            <p class="form-control-static">@Model?.LastName</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Email Address</label>
                    <p class="form-control-static">@Model?.Email</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Username</label>
                    <p class="form-control-static">@Model?.UserName</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Member Since</label>
                    <p class="form-control-static">@Model?.CreatedAt.ToString("MMMM dd, yyyy")</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Roles</label>
                    <div>
                        @if (Model?.Roles?.Any() == true)
                        {
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="badge bg-secondary">No roles assigned</span>
                        }
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <a asp-controller="Todo" asp-action="Dashboard" class="btn btn-primary">
                        <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                    </a>
                    <a asp-controller="Todo" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>My Todos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
