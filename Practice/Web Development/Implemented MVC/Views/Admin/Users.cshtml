@model List<Implemented_MVC.DTOs.UserDto>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>Manage Users</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

@if (Model?.Any() == true)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Total Users: <strong>@Model.Count</strong> |
                Admins: <strong>@Model.Count(u => u.Roles.Contains("Admin"))</strong> |
                Regular Users: <strong>@Model.Count(u => u.Roles.Contains("User") && !u.Roles.Contains("Admin"))</strong>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-table me-2"></i>User List
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-user me-1"></i>Name</th>
                            <th><i class="fas fa-envelope me-1"></i>Email</th>
                            <th><i class="fas fa-shield-alt me-1"></i>Roles</th>
                            <th><i class="fas fa-calendar me-1"></i>Created</th>
                            <th><i class="fas fa-tasks me-1"></i>Todos</th>
                            <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @((!string.IsNullOrEmpty(user.FirstName) ? user.FirstName.Substring(0, 1).ToUpper() : 
                                               (!string.IsNullOrEmpty(user.Email) ? user.Email.Substring(0, 1).ToUpper() : "?")))
                                        </div>
                                        <div>
                                            <strong>@($"{user.FirstName} {user.LastName}".Trim())</strong>
                                            @if (string.IsNullOrEmpty($"{user.FirstName} {user.LastName}".Trim()))
                                            {
                                                <span class="text-muted">No name provided</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@user.Email" class="text-decoration-none">
                                        @user.Email
                                    </a>
                                </td>
                                <td>
                                    @if (user.Roles?.Any() == true)
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge @(role == "Admin" ? "bg-danger" : "bg-primary") me-1">
                                                <i class="fas @(role == "Admin" ? "fa-crown" : "fa-user") me-1"></i>@role
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No roles</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @user.CreatedAt.ToString("MMM dd, yyyy")
                                        <br />
                                        <span class="text-muted">@user.CreatedAt.ToString("HH:mm")</span>
                                    </small>
                                </td>
                                <td>
                                    @if (user.TodoStats != null)
                                    {
                                        <div class="small">
                                            <div class="text-primary">
                                                <i class="fas fa-tasks me-1"></i>Total: @user.TodoStats.Total
                                            </div>
                                            <div class="text-success">
                                                <i class="fas fa-check me-1"></i>Done: @user.TodoStats.Completed
                                            </div>
                                            <div class="text-warning">
                                                <i class="fas fa-clock me-1"></i>Pending: @user.TodoStats.Pending
                                            </div>
                                            @if (user.TodoStats?.Overdue > 0)
                                            {
                                                <div class="text-danger">
                                                    <i class="fas fa-exclamation me-1"></i>Overdue: @user.TodoStats.Overdue
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No data</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <!-- Role Assignment Dropdown -->
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" 
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-user-cog me-1"></i>Roles
                                            </button>
                                            <ul class="dropdown-menu">
                                                @if (!user.Roles?.Contains("Admin") == true)
                                                {
                                                    <li>
                                                        <form asp-action="AssignRole" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <input type="hidden" name="roleName" value="Admin" />
                                                            <button type="submit" class="dropdown-item" 
                                                                    onclick="return confirm('Assign Admin role to @user.Email?')">
                                                                <i class="fas fa-crown me-2"></i>Make Admin
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                                @if (!user.Roles?.Contains("User") == true)
                                                {
                                                    <li>
                                                        <form asp-action="AssignRole" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <input type="hidden" name="roleName" value="User" />
                                                            <button type="submit" class="dropdown-item" 
                                                                    onclick="return confirm('Assign User role to @user.Email?')">
                                                                <i class="fas fa-user me-2"></i>Make User
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                            </ul>
                                        </div>

                                        <!-- View User's Todos -->
                                        <a asp-action="AllTodos" asp-route-userId="@user.Id" 
                                           class="btn btn-sm btn-outline-info" 
                                           title="View @user.Email's todos">
                                            <i class="fas fa-tasks"></i>
                                        </a>

                                        <!-- Delete User (only if not current admin) -->
                                        @if (!user.Roles?.Contains("Admin") == true || Model.Count(u => u.Roles?.Contains("Admin") == true) > 1)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteUserModal" 
                                                    data-user-id="@user.Id" 
                                                    data-user-email="@user.Email"
                                                    title="Delete user">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-users text-muted mb-3" style="font-size: 4rem;"></i>
            <h4 class="card-title">No Users Found</h4>
            <p class="card-text text-muted">There are no users in the system.</p>
        </div>
    </div>
}

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUserModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete User
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> This action cannot be undone.
                </div>
                <p>Are you sure you want to delete the user <strong id="userEmailToDelete"></strong>?</p>
                <p class="text-muted small">This will also delete all todos associated with this user.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form id="deleteUserForm" asp-action="DeleteUser" method="post" class="d-inline">
                    <input type="hidden" id="userIdToDelete" name="userId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle delete user modal
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteUserModal');
            
            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const userId = button.getAttribute('data-user-id');
                const userEmail = button.getAttribute('data-user-email');
                
                document.getElementById('userIdToDelete').value = userId;
                document.getElementById('userEmailToDelete').textContent = userEmail;
            });
        });
    </script>
}

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(45deg, #007bff, #0056b3);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 16px;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .btn-group .dropdown-menu {
        min-width: 150px;
    }
    
    .dropdown-item:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        font-size: 0.75rem;
    }
</style>
