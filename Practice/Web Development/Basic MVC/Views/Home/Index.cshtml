@{
    ViewData["Title"] = "Dashboard";
}

<!-- Hero Section -->
<div class="row mb-5">
    <div class="col-12">
        <div class="bg-primary text-white rounded-3 p-5 text-center">
            <div class="container">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-mortarboard-fill me-3"></i>Welcome to Student Management System
                </h1>
                <p class="lead mb-4">Efficiently manage student records, grades, and academic information in one place.</p>
                <a class="btn btn-light btn-lg" asp-controller="Student" asp-action="Index">
                    <i class="bi bi-people-fill me-2"></i>View Students
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mb-5">
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                    <i class="bi bi-people-fill text-primary fs-3"></i>
                </div>
                <h5 class="card-title">Manage Students</h5>
                <p class="card-text text-muted">Add, edit, and view student information and academic records.</p>
                <a class="btn btn-outline-primary" asp-controller="Student" asp-action="Index">
                    View All Students
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                    <i class="bi bi-journal-text text-success fs-3"></i>
                </div>
                <h5 class="card-title">Track Grades</h5>
                <p class="card-text text-muted">Monitor student performance and academic achievements.</p>
                <a class="btn btn-outline-success" asp-controller="Student" asp-action="Index">
                    View Grades
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center">
                <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                    <i class="bi bi-graph-up text-info fs-3"></i>
                </div>
                <h5 class="card-title">Analytics</h5>
                <p class="card-text text-muted">Generate reports and analyze student data trends.</p>
                <a class="btn btn-outline-info" href="#" onclick="alert('Feature coming soon!')">
                    View Reports
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning-fill text-warning me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a class="btn btn-primary w-100" asp-controller="Student" asp-action="Create">
                            <i class="bi bi-person-plus-fill me-2"></i>Add New Student
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a class="btn btn-outline-primary w-100" asp-controller="Student" asp-action="Index">
                            <i class="bi bi-search me-2"></i>Search Students
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
